<mujoco model="shuffleboard">
	<compiler angle="radian" inertiafromgeom="true"/>

	<visual>
		<rgba fog="0.5 0.5 0.5 1"/>
	</visual>

	<default>
		<joint armature="1" damping="1" limited="true"/>
		<geom contype="0" conaffinity="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
	</default>

	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.01"/>

	<worldbody>

		<!-- Arena -->
		<geom contype="1" name="ground" pos="0 0 0" rgba="0.96 0.87 0.75 1" size=".4 1 10" type="plane"/>
		<geom contype="1" fromto="-.4 -1 .01 .4 -1 .01" name="sideS" rgba="0.35 0.23 0.19 1" size=".02" type="capsule"/>
		<geom contype="1" fromto=" .4 -1 .01 .4  1 .01" name="sideE" rgba="0.35 0.23 0.19 1" size=".02" type="capsule"/>
		<geom contype="1" fromto="-.4  1 .01 .4  1 .01" name="sideN" rgba="0.35 0.23 0.19 1" size=".02" type="capsule"/>
		<geom contype="1" fromto="-.4 -1 .01 -.4 1 .01" name="sideW" rgba="0.35 0.23 0.19 1" size=".02" type="capsule"/>

		<!-- Arm -->
		<geom fromto="-.07 -.6 0 -.07 -.6 0.02" name="root" rgba="0.9 0.4 0.6 1" size=".011" type="cylinder"/>
		<body name="body0" pos="-.07 -.6 .01">
			<geom contype="1" fromto="0 0 0 0 -0.1 0" name="link0" rgba="0.0 0.4 0.6 1" size=".01" type="capsule"/>
			<joint axis="0 0 1" limited="false" name="joint0" pos="0 0 0" type="hinge"/>
			<body name="body1" pos="0 -0.1 0">
				<joint axis="0 0 1" limited="true" name="joint1" pos="0 0 0" range="-3.0 3.0" type="hinge"/>
				<geom contype="1" fromto="0 0 0 0 -0.1 0" name="link1" rgba="0.0 0.4 0.6 1" size=".01" type="capsule"/>
				<body name="fingertip" pos="0 -0.1 0">
					<geom contype="1" name="fingertip" pos="0 0 0" rgba="0.0 0.8 0.6 1" size=".01" type="sphere"/>
				</body>
			</body>
		</body>

		<!-- Puck -->
		<body name="puck" pos=".07 -.6 .01">
			<joint axis="1 0 0" damping="0.6" name="puck_x" pos="0 0 0 " range="-2 2" type="slide"/>
			<joint axis="0 1 0" damping="0.6" name="puck_y" pos="0 0 0 " range="-2 2" type="slide"/>
			<geom conaffinity="1" name="puck" fromto="0 0 0 0 0 0.01" rgba="0.9 0.2 0.2 1" size=".02" type="cylinder"/>
		</body>

		<!-- Target -->
		<body name="target" pos="0 0 0">
			<geom name="target" fromto="-.4 0 0 .4 0 0" rgba="0.2 0.2 0.2 1" size=".009" type="capsule"/>
		</body>

	</worldbody>

	<actuator>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="30.0" joint="joint0"/>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="30.0" joint="joint1"/>
	</actuator>

</mujoco>
